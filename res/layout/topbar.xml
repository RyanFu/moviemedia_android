<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_toptitle"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<RelativeLayout android:id="@+id/relativelayout_toptitle"
	   android:layout_width="fill_parent" 
       android:layout_height="@dimen/topbar_height" 
       android:background="@color/topbar_background"
       >
       
       <TextView android:id="@+id/topbar_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="@dimen/title"
           android:textStyle="bold"
           android:textColor="@color/main_color_orange"
           android:text="@string/title"
           />          
	</RelativeLayout>
</LinearLayout>

