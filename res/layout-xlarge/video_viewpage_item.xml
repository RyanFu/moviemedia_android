<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <ImageView android:id="@+id/pager_poster"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <TextView android:id="@+id/pager_context"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/pager_poster"
        android:textIsSelectable="true"
        android:textColor="@color/video_description"
        android:textSize="@dimen/news_content_video_tv_descrption" />
    <ImageView android:id="@+id/pager_play"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/pager_poster"
        android:layout_alignBottom="@+id/pager_poster"
        android:scaleType="fitCenter"
        android:padding="@dimen/news_content_video_board"
        android:src="@drawable/play" />
</RelativeLayout>