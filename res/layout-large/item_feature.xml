<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="left" >
    
    <View android:id="@+id/feature_seperate"
        android:layout_width="@dimen/seperate"
        android:layout_height="@dimen/news_lv_photo"
        android:background="@color/main_color_orange" />
        
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center" >
	    <ImageView android:id="@+id/feature_pic"
	        android:layout_width="@dimen/news_lv_photo"
	        android:layout_height="@dimen/news_lv_photo"
	        android:scaleType="fitCenter" />
	    
	    <TextView android:id="@+id/feature_name" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginRight="@dimen/news_lv_item_board_right"
	        android:layout_marginLeft="@dimen/news_lv_item_board_left"
	        android:textSize="@dimen/news_lv_source"
	        android:textColor="@color/grey"
	        android:text="@string/news_lv_source" />
	    </LinearLayout>
	    
	</LinearLayout>